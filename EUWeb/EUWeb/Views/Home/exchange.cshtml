@{
    ViewBag.Title = "兑换积分";
}
<div class="row container-row1">
    <div id="pageID" name="exchange" class="pageIdHide"></div>
    <div class="col-md-12">
        <div class="portlet box exchanage-portlet">
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="#" class="form-horizontal form-row-seperated" style="margin-top:5%;">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-4">卡号</label>
                            <div class="col-md-4">
                                <input size="15" maxlength="15" class="form-control" id="input_ipv4" type="text">
                                <span class="help-block">
                                    卡号错误
                                </span>
                            </div>
                        </div>
                        <div class="form-group last">
                            <label class="control-label col-md-4">密码</label>
                            <div class="col-md-4">
                                <input size="6" maxlength="18" class="form-control" id="inputPassword" type="password" placeholder="Password">
                                <span class="help-block">
                                    密码不能为空
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-4 col-md-8">
                                @*<button type="submit" class="btn red btn-lg">兑换</button>*@
                                <a href="~/Home/exchangeCommodity" class="btn btn-danger btn-lg">立即兑换</a>
                                <button type="button" class="btn default btn-lg" style="margin-left:10%;">查询</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>	